{
  "name": "Python 3 + Claude Code",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.pylint"
      ]
    }
  },
  "postCreateCommand": "pip install -r requirements.txt || true && npm install -g @anthropic-ai/claude-code",
  "forwardPorts": [8000],
  "containerEnv": {
    "CLAUDE_CONFIG_DIR": "/workspaces/${localWorkspaceFolderBasename}/.claude"
  }
}